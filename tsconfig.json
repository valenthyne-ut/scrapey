{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		
		"outDir": "./dist",
		"removeComments": true,
		
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		
		"strict": true,

		"skipLibCheck": true
	},
	"include": [
		"eslint.config.mjs",
		"src/**/*"
	]
}
